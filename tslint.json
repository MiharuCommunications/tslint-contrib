{
  "extends": [
    "tslint-microsoft-contrib/recommended"
  ],
  "rules": {
    "eofline": {
      "severity": "error"
    },
    "indent": {
      "options": ["spaces", 4],
      "severity": "error"
    },
    "linebreak-style": {
      "options": "LF",
      "severity": "error"
    },
    "no-arg": {
      "severity": "error"
    },
    "no-backbone-get-set-outside-model": false,
    "no-bitwise": {
      "severity": "warning"
    },
    "no-duplicate-super": {
      "severity": "error"
    },
    "no-empty": {
      "options": ["allow-empty-catch", "allow-empty-functions"],
      "severity": "error"
    },
    "no-eval": {
      "severity": "error"
    },
    "no-function-expression": {
      "severity": "error"
    },
    "no-invalid-this": {
      "options": ["check-function-in-method"],
      "severity": "warning"
    },
    "no-string-throw": {
      "severity": "error"
    },
    "no-switch-case-fall-through": {
      "severity": "error"
    },
    "no-unsafe-finally": {
      "severity": "error"
    },
    "no-unused-expression": {
      "options": [
        "allow-fast-null-checks",
        "allow-new",
        "allow-tagged-template"
      ],
      "severity": "error"
    },
    "no-var-keyword": {
      "severity": "error"
    },
    "radix": {
      "severity": "error"
    },
    "triple-equals": {
      "severity": "error"
    },
    "array-type": {
      "options": "array",
      "severity": "error"
    },
    "arrow-return-shorthand": {
      "options": "multiline",
      "severity": "none"
    },
    "semicolon": {
      "options": "always",
      "severity": "error"
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-type-operator",
        "check-preblock"
      ],
      "severity": "error"
    },
    "no-irregular-whitespace": {
      "severity": "error"
    },
    "jsdoc-format": {
      "severity": "error"
    },
    "encoding": {
      "severity": "error"
    },
    "comment-format": {
      "options": ["check-space"],
      "severity": "error"
    },
    "no-jquery-raw-elements": {
      "severity": "warning"
    },

    "function-name": {
      "options": {
        "method-regex": "^[a-z][\\w\\d]+$",
        "private-method-regex": "^[a-z][\\w\\d]+$",
        "protected-method-regex": "^[a-z][\\w\\d]+$",
        "static-method-regex": "^[a-z][\\w\\d]+$",
        "function-regex": "^[a-z][\\w\\d]+$"
      },
      "severity": "error"
    },



    "no-relative-imports": false,
    "react-this-binding-issue": [
      true,
      {
        "allow-anonymous-listeners": true
      }
    ],


    "react-a11y-accessible-headings": false,
    "react-a11y-anchors": false,
    "react-a11y-aria-unsupported-elements": false,
    "react-a11y-event-has-role": false,
    "react-a11y-iframes": false,
    "react-a11y-image-button-has-alt": false,
    "react-a11y-img-has-alt": false,
    "react-a11y-input-elements": false,
    "react-a11y-lang": false,
    "react-a11y-meta": false,
    "react-a11y-mouse-event-has-key-event": false,
    "react-a11y-no-onchange": false,
    "react-a11y-props": false,
    "react-a11y-proptypes": false,
    "react-a11y-required": false,
    "react-a11y-role": false,
    "react-a11y-role-has-required-aria-props": false,
    "react-a11y-role-supports-aria-props": false,
    "react-a11y-tabindex-no-positive": false,
    "react-a11y-titles": false,

    "export-name": false,
    "no-http-string": false,

    "import-name": {
      "underscore": "_",
      "severity": "warning"
    },

    "max-func-body-length": {
      "max-body-length": 100,
      "max-func-body-length": 100,
      "max-func-expression-body-length": 100,
      "max-arrow-body-length": 100,
      "max-method-body-length": 100,
      "max-ctor-body-length": 100,
      "ignore-comments": true,
      "ignore-parameters-to-function-regex": "^describe$",
      "severity": "warning"
    },

    "use-simple-attributes": {
      "severity": "warning"
    },

    "promise-must-complete": {
      "severity": "warning"
    },


    "mocha-avoid-only": false,
    "mocha-no-side-effect-code": false,
    "mocha-unneeded-done": false
  }
}
